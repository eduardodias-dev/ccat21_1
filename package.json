{
  "name": "trading_platform",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts":{
    "docker:build": "docker build -t ccat22_backend docker",
    "docker:run": "docker run -it -v ${pwd}/.:/app ccat22_backend bash",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "compose:up": "docker-compose -f docker/docker-compose.yml up -d --build",
    "compose:down": "docker-compose -f docker/docker-compose.yml -v down",
    "compose:exec": "docker-compose -f docker/docker-compose.yml exec -it backend bash"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "axios": "^1.12.2",
    "express": "^5.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "pg-promise": "^12.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
